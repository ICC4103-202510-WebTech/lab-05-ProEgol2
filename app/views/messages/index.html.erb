<div class="table-responsive container justify-content-center">
    <div class="d-flex justify-content-between">
        <h2 class="">Messages</h2>
        <a class="btn btn-outline-dark mt-2 mb-2"href="/messages/new">Add</a>
    </div>
    <table class="table w-100" style="table-layout: fixed;">
        <tr>
            <th></th>
            <th>ID: </th>
            <th>Chat ID: </th>
            <th>User ID: </th>
            <th>Body: </th>
            <th>Created At: </th>
            <th>Updated At: </th>
            <th></th>
        </tr>
        <% @messages.each do |message| %>
            <tr>
                <td><%= link_to("Show", message_path(message), class: "btn btn-outline-dark") %></td>
                <td><%= message.id %></td>
                <td><%= message.chat_id %></td>
                <td><%= message.user_id %></td>
                <td><%= message.body %></td>
                <td><%= message.created_at %></td>
                <td><%= message.updated_at %></td>
                <td><%= link_to("Edit", edit_message_path(message), class: "btn btn-outline-dark") %></td>
            </tr>
        <% end %>
</table>