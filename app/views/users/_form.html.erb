<div class="container justify-content-center">
    <%= form_with model: @user do |form| %>
        <div class="d-flex justify-content-between">
            <h2 class="">Create Users</h2>
            <%= form.submit "Save", class: "btn btn-outline-dark mt-2 mb-2"%>
        </div>
        <table class="table w-100" style="table-layout: fixed;">
            <tr>
                <th></th>
                <th>ID: </th>
                <th>First Name: </th>
                <th>Last Name: </th>
                <th>Email: </th>
                <th>Created At: </th>
                <th>Updated At: </th>
                <th></th>
            </tr>
            <tr>
                <td></td>
                <td><%= @user.id %></td>
                <td><%= form.text_field :first_name, class: "form-control"%></td>
                <td><%= form.text_field :last_name, class: "form-control" %></td>
                <td><%= form.text_field :email, class: "form-control" %></td>
                <td><%= @user.created_at %></td>
                <td><%= @user.updated_at %></td>
                <td></td>
            </tr>
        </table>
        <% if @user.errors.any? %>
            <h5>Error</h5>
            <ul>
                <% @user.errors.full_messages.each do |err| %>
                    <li><%= err %></li>
                <% end %>
            </ul>
        <% end %>
    <% end %>
</div>