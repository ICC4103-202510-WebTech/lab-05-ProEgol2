<div class="table-responsive container justify-content-center" style="table-layout: fixed;">
    <div class="d-flex justify-content-between">
        <h3 class="">Users</h2>
    </div>
    <table class="table w-100" style="table-layout: fixed;">
        <tr>
            <th class = "mx-5"></th>
            <th>ID: </th>
            <th>First Name: </th>
            <th>Last Name: </th>
            <th>Email: </th>
            <th>Created At: </th>
            <th>Updated At: </th>
            <th></th>
        </tr>
        <% @users.each do |user| %>
            <tr>
                <td><%= link_to("Show", user_path(user), class: "btn btn-outline-dark") %></td>
                <td><%= user.id %></td>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at %></td>
                <td><%= user.updated_at %></td>
                <% if can? :edit, user %>
                    <td><%= link_to("Edit", edit_user_registration_path(user), class: "btn btn-outline-dark") %></td>
                <% else %>
                    <td><%= link_to("Edit", edit_user_registration_path(user), class: "btn btn-outline-dark disabled") %></td>
                <% end %>
            </tr>
        <% end %>
</table>